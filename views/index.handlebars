<div id="top-container" class="container-fluid">
        <h1 id="main-title" class="text-center">O caminho que você deseja seguir... Está aqui!</h1>
        <p id="main-subtitle" class="text-center">Somos o site com as melhores vadas de Tecnologia no Brasil!</p>

        <form id="search-form" class="form-inline" action="">
            <div class="form-group col-md-10">
                <input type="text" class="form-control" id="job" name="job" placeholder="Digite a vaga que deseja encontrar">

            </div>
            <div class="cold-md-2">
                <button type="submit" class="btn btn-primary"> Procurar</button>
            </div>

        </form>
    </div>
    <main>
        <div id="jobs-container" class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 id="job-list-title">Veja as vagas destaques</h2>
                    <ul id="job-list" class="list-group">
                        {{#each jobs}}
                        <li class="list-group-item {{#if dataValues.new_job}} new-job{{/if}}">
                            <img src="/css/img/company.svg" alt="Company">
                            <p>{{dataValues.company}}</p>
                            <h2>{{dataValues.title}}</h2>
                            <p>R$:{{dataValues.salary}}</p>
                            <span class="new-job-label">Nova</span>
                            <a class="btn btn-primary" href="/jobs/view/{{dataValues.id}}">Ver vaga</a>
                        </li>
                        {{/each}}
                        
                    </ul>
                </div>
            </div>
        </div>
    </main>